<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblRowsColumns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rows/Columns"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/lblDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete saved gestures"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@id/lblRowsColumns" />

    <EditText
        android:id="@+id/txtRowsColumns"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintLeft_toRightOf="@id/lblRowsColumns" />

</android.support.constraint.ConstraintLayout>